{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/core/*": ["./src/core/*"],
      "@/core/types/*": ["./src/core/types/*"],
      "@/core/utils/*": ["./src/core/utils/*"],
      "@/core/constants/*": ["./src/core/constants/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/features/*": ["./src/features/*"],
      "@/features/vpn/*": ["./src/features/vpn/*"],
      "@/features/news/*": ["./src/features/news/*"],
      "@/features/logs/*": ["./src/features/logs/*"],
      "@/features/account/*": ["./src/features/account/*"],
      "@/features/terms/*": ["./src/features/terms/*"],
      "@/i18n/*": ["./src/i18n/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/__tests__"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
